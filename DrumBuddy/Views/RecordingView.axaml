<rxui:ReactiveUserControl x:TypeArguments="viewModels:RecordingViewModel"
                          x:DataType="viewModels:RecordingViewModel"
                          xmlns="https://github.com/avaloniaui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:helperViews="clr-namespace:DrumBuddy.Views.HelperViews"
                          xmlns:viewModels="clr-namespace:DrumBuddy.ViewModels"
                          xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
                          mc:Ignorable="d" d:DesignWidth="1250" d:DesignHeight="500"
                          x:Class="DrumBuddy.Views.RecordingView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource HeaderGray}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.3*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="StartRecordingButton"
                        Grid.Row="0"
                        Grid.Column="0"
                        Background="{StaticResource HeaderGray}">
                    <StackPanel Orientation="Horizontal">
                        <PathIcon Data="{StaticResource RecordIcon}" />
                        <TextBlock Text="Start Recording" FontFamily="{StaticResource NunitoFont}"
                                   FontSize="24"
                                   Margin="10" />
                    </StackPanel>
                </Button>
                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Horizontal">
                    <Button x:Name="StopRecordingButton"
                            Background="{StaticResource HeaderGray}">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{StaticResource RecordIcon}"
                                      Foreground="Red" />
                            <TextBlock Text="Stop Recording" FontFamily="{StaticResource NunitoFont}"
                                       FontSize="24"
                                       Margin="10" />
                        </StackPanel>
                    </Button>
                    <!-- TODO implement pause and resume -->
                    <Button x:Name="PauseRecordingButton" IsVisible="False">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{StaticResource Pause}" />
                            <TextBlock Text="Pause" FontFamily="{StaticResource NunitoFont}"
                                       FontSize="24"
                                       Margin="10" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ResumeRecordingButton" IsVisible="False">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{StaticResource Resume}" />
                            <TextBlock Text="Resume" FontFamily="{StaticResource NunitoFont}"
                                       FontSize="24"
                                       Margin="10" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock FontSize="24" FontFamily="{StaticResource NunitoFont}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        BPM:
                    </TextBlock>
                    <NumericUpDown x:Name="BpmNumeric"
                                   Minimum="20"
                                   Maximum="250"
                                   Value="100"
                                   FormatString="0"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Margin="0,0,10,0"
                            Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <TextBlock FontSize="24"
                               FontFamily="{StaticResource NunitoFont}"
                               VerticalAlignment="Center">
                        Time elapsed:
                    </TextBlock>
                    <TextBlock x:Name="TimeElapsedTextBlock"
                               FontSize="24"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
        <Grid x:Name="CountdownGrid" Grid.Row="1" Background="#80000000" Opacity="0.7">
            <TextBlock x:Name="CountdownTextBlock" FontWeight="Bold"
                       FontSize="300"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>
        <ScrollViewer Grid.Row="1" x:Name="MeasuresScrollViewer" VerticalScrollBarVisibility="Auto">

            <Grid>
                <helperViews:MeasuresPanel x:Name="MeasuresViewer"
                                           Measures="{Binding Measures}" />
                <helperViews:MeasuresPanel Measures="{Binding OverlayMeasures}"
                                           IsVisible="{Binding OverlayVisible}"
                                           Opacity="0.3" />
            </Grid>
        </ScrollViewer>
        <ComboBox Grid.Row="1" x:Name="OverlaySheetComboBox"
                  IsVisible="{Binding !IsLoadingSheets}"
                  Background="{StaticResource HeaderGray}"
                  HorizontalAlignment="Right"
                  SelectedItem="{Binding SelectedSheetOption}"
                  ItemsSource="{Binding SheetOptions}"
                  Width="240">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" MaxWidth="240">
                        <TextBlock Text="Overlay sheet: "
                                   FontSize="16"
                                   HorizontalAlignment="Left" />
                        <TextBlock Text="{Binding DisplayName}" MaxWidth="80"
                                   FontSize="16" TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Border Grid.Row="1"
                IsVisible="{Binding IsLoadingSheets}"
                Background="{StaticResource HeaderGray}"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="240">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <avaloniaProgressRing:ProgressRing
                    Width="25"
                    Height="25" Margin="5"
                    IsActive="True" />
                <TextBlock Classes="header" Margin="0,5,0,0">Sheets are loading</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</rxui:ReactiveUserControl>