<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helperViews="clr-namespace:DrumBuddy.Views.HelperViews"
             mc:Ignorable="d"
             x:Class="DrumBuddy.Views.HelperViews.MeasuresPanel">
    <ItemsControl x:Name="MeasuresItemControl">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <helperViews:MeasureWrapPanel />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <helperViews:MeasureView PointerPressed="OnMeasurePointerPressed"
                                         HorizontalAlignment="Left"
                                         LineOverlayOpacity="{Binding RelativeSource={RelativeSource AncestorType=helperViews:MeasuresPanel}, Path=LineOverlayOpacity}"
                                         NoteOverlayOpacity="{Binding RelativeSource={RelativeSource AncestorType=helperViews:MeasuresPanel}, Path=NoteOverlayOpacity}"
                                         VerticalAlignment="Top" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>