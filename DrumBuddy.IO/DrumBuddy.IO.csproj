<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RuntimeIdentifiers>win-x64;linux-x64;osx-x64;osx-arm64</RuntimeIdentifiers> 
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Dapper"/>
        <PackageReference Include="ManagedBass"/>
        <PackageReference Include="ManagedBass.Midi"/>
        <PackageReference Include="System.Data.SQLite.Core"/>
        <PackageReference Include="System.Management"/>
        <PackageReference Include="System.Reactive"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\DrumBuddy.Core\DrumBuddy.Core.csproj"/>
    </ItemGroup>
<!--    linux bass runtimes-->
    <ItemGroup>
        <None Include="runtimes/linux-x64/native/libbass.so" CopyToOutputDirectory="PreserveNewest"/>
        <None Include="runtimes/linux-x64/native/libbassmidi.so" CopyToOutputDirectory="PreserveNewest"/>
    </ItemGroup>
<!--    windows bass runtimes-->
    <ItemGroup>
        <None Include="runtimes/win-x64/native/bass.dll" CopyToOutputDirectory="PreserveNewest"/>
        <None Include="runtimes/win-x64/native/bassmidi.dll" CopyToOutputDirectory="PreserveNewest"/>
    </ItemGroup>
<!--    macos bass runtimes-->
    <ItemGroup>
        <None Include="runtimes/osx-x64/native/libbass.dylib" CopyToOutputDirectory="PreserveNewest" />
        <None Include="runtimes/osx-x64/native/libbassmidi.dylib" CopyToOutputDirectory="PreserveNewest" />
        <None Include="runtimes/osx-arm64/native/libbass.dylib" CopyToOutputDirectory="PreserveNewest" Condition="Exists('runtimes/osx-arm64/native/libbass.dylib')" />
        <None Include="runtimes/osx-arm64/native/libbassmidi.dylib" CopyToOutputDirectory="PreserveNewest" Condition="Exists('runtimes/osx-arm64/native/libbassmidi.dylib')" />
    </ItemGroup>

</Project>
